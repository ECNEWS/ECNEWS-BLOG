import React, { useState } from "react";
import ReactDOM from "react-dom/client";
import "./index.css"; // TailwindCSS स्टाइल इम्पोर्ट करना जरूरी है

const App = () => {
  const [page, setPage] = useState("signup"); // 'signup' या 'writeBook'

  return (
    <div
      className="min-h-screen flex items-center justify-center bg-cover bg-center"
      style={{
        backgroundImage:
          page === "signup"
            ? "url('https://images.unsplash.com/photo-1581090700227-1c065c6663ba?auto=format&fit=crop&w=1950&q=80')" // AI Background for SignUp
            : "url('https://images.unsplash.com/photo-1629904853716-f0bc54eea481?auto=format&fit=crop&w=1950&q=80')", // AI Background for Write Book
      }}
    >
      {page === "signup" ? (
        <div className="bg-white bg-opacity-90 backdrop-blur-md p-8 rounded-2xl shadow-2xl max-w-sm w-full">
          <h1 className="text-3xl font-bold mb-6 text-center text-gray-800">
            Create Your Account
          </h1>

          <div className="flex flex-col space-y-4 mb-4">
            <button className="w-full py-2 px-4 bg-red-500 hover:bg-red-600 text-white font-semibold rounded-xl">
              Sign Up with Google
            </button>
            <button className="w-full py-2 px-4 bg-black hover:bg-gray-900 text-white font-semibold rounded-xl">
              Sign Up with Apple
            </button>
            <button className="w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-xl">
              Sign Up with Facebook
            </button>
            <button className="w-full py-2 px-4 bg-green-500 hover:bg-green-600 text-white font-semibold rounded-xl">
              Sign Up with Mobile Number
            </button>
          </div>

          <button
            onClick={() => setPage("writeBook")}
            className="w-full py-2 px-4 bg-indigo-500 hover:bg-indigo-600 text-white font-semibold rounded-xl"
          >
            Next: Write Your Book
          </button>
        </div>
      ) : (
        <div className="bg-white bg-opacity-90 backdrop-blur-md p-8 rounded-2xl shadow-2xl max-w-lg w-full">
          <h1 className="text-3xl font-bold mb-6 text-center text-gray-800">
            Write Your Book
          </h1>

          <textarea
            placeholder="Start writing your story here..."
            className="w-full h-64 p-4 border rounded-xl resize-none focus:outline-none focus:ring-2 focus:ring-indigo-400"
          ></textarea>

          <button
            onClick={() => setPage("signup")}
            className="mt-4 w-full py-2 px-4 bg-gray-500 hover:bg-gray-600 text-white font-semibold rounded-xl"
          >
            Back to Create Account
          </button>
        </div>
      )}
    </div>
  );
};

const root = ReactDOM.createRoot(document.getElementById("root"));
root.render(
  <React.StrictMode>
    <App />
  </React.StrictMode>
);
